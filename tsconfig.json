{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "moduleDetection": "force",
    "target": "ES2021",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "baseUrl": "./App",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
  },
  "include": [
    "App/*",
    "App/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}